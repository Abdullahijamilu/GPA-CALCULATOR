<script>
    function validateForm() {
        // Get all subject input fields
        const subjects = document.getElementsByName("subject");

        // Loop through each subject input to check if it's empty
        for (let i = 0; i < subjects.count; i++) {
            if (subjects[i].value.trim() === "") {
                alert("Please enter a subject in all fields.");
                return false; // Prevent form submission
            }
        }
        return true; // Allow form submission
    }
</script>


